public class RobustErrorHandler {
    public static void processData(String input, int[] numbers) {
        try {
            int value = Integer.parseInt(input);
            System.out.println("Value: " + numbers[value]);
            
        } catch (NumberFormatException e) {
            System.out.println("Invalid number format: " + e.getMessage());
            
        } catch (ArrayIndexOutOfBoundsException e) {
            System.out.println("Array index error: " + e.getMessage());
            
        } catch (Exception e) {
            System.out.println("Unexpected error: " + e.getMessage());
        }
    }
    
    public static void main(String[] args) {
        int[] data = {10, 20, 30};
        processData("abc", data);  // NumberFormatException
        processData("5", data);    // ArrayIndexOutOfBoundsException
        processData("1", data);    // Success
    }
}
