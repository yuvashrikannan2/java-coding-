public class PowerEngine {
    public static double power(double base, int exponent) {
        double result = 1.0;
        for (int i = 0; i < exponent; i++) {
            result *= base;
        }
        return result;
    }
    
    public static void main(String[] args) {
        System.out.println(power(2, 3)); // 8.0
        System.out.println(power(5, 2)); // 25.0
    }
}
