public class Student {
    private String name;
    private int age;
    private String course;
    
    // Default constructor
    public Student() {
        this("Unknown", 0, "General");
    }
    
    // Parameterized constructor 1
    public Student(String name) {
        this(name, 18, "Computer Science");
    }
    
    // Parameterized constructor 2
    public Student(String name, int age) {
        this(name, age, "B.Tech");
    }
    
    // Full parameterized constructor
    public Student(String name, int age, String course) {
        this.name = name;
        this.age = age;
        this.course = course;
    }
    
    public void display() {
        System.out.println(name + " (" + age + ") - " + course);
    }
    
    public static void main(String[] args) {
        Student s1 = new Student();           // Default
        Student s2 = new Student("Alice");    // 1 param
        Student s3 = new Student("Bob", 20);  // 2 params
        Student s4 = new Student("Charlie", 19, "MCA");
        
        s1.display();
        s2.display();
        s3.display();
        s4.display();
    }
}
